import { getCurrentTimeInArgentina, formatTimeForArgentina } from "../lib/helpers";
import Card from "./Card/index.astro";
---

<script>
  import { onCleanup, onMount } from "solid-js/types/index.d.ts";
  let interval: ReturnType<typeof setInterval>;

  function updateClock() {
    const timeDisplay = document.getElementById("timeDisplay");
    const now = getCurrentTimeInArgentina();

    if (timeDisplay) {
      timeDisplay.textContent = formatTimeForArgentina(now);
      timeDisplay.setAttribute("datetime", Date());
    }
  }

  onMount(() => {
    interval = setInterval(updateClock, 1000);
  });

  onCleanup(() => {
    clearInterval(interval);
  });


